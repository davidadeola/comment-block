{
    "name": "comment-block",
    "displayName": "Uncomment block comment",
    "version": "0.0.1",
    "description": "VSCode extension that uncomments an entire block of code with a single command, from any position in the block of comment.",
    "publisher": "davidadeola",
    "private": true,
    "preview": false,
    "author": {
        "name": "David Adeola",
        "email": "adeoladavidoluwole@gmail.com",
        "url": "https://github.com/davidadeola"
    },
    "license": "SEE LICENSE IN LICENSE",
    "homepage": "https://github.com/davidadeola/comment-block/blob/main/README.md",
    "repository": {
        "type": "git",
        "url": "https://github.com/davidadeola/comment-block"
    },
    "bugs": {
        "url": "https://github.com/davidadeola/comment-block/issues",
        "email": "adeoladavidoluwole@gmail.com"
    },
    "keywords": [
        "comment",
        "block",
        "comment block",
        "uncomment",
        "uncomment comment",
        "uncomment block comment",
        "remove comment",
        "remove block comment"
    ],
    "categories": [
        "Formatters",
        "Other"
    ],
    "main": "./out/src/extension.js",
    "icon": "assets/logo.png",
    "engines": {
        "vscode": "^1.86.0"
    },
    "badges": [
        {
            "url": "https://img.shields.io/badge/PRs-welcome-brightgreen.svg",
            "description": "PRs Welcome",
            "href": "https://github.com/davidadeola/comment-block/fork"
        }
    ],
    "activationEvents": [],
    "contributes": {
        "commands": [
            {
                "command": "comment-block.uncomment",
                "title": "Uncomment block comment"
            }
        ],
        "keybindings": [
            {
                "command": "comment-block.uncomment",
                "key": "Cmd+Shift+/",
                "mac": "Cmd+Shift+/",
                "when": "editorTextFocus"
            },
            {
                "command": "comment-block.uncomment",
                "key": "Ctrl+Shift+/",
                "win": "Ctrl+Shift+/",
                "when": "editorTextFocus"
            },
            {
                "command": "comment-block.uncomment",
                "key": "Ctrl+Shift+/",
                "linux": "Ctrl+Shift+/",
                "when": "editorTextFocus"
            }
        ]
    },
    "eslintConfig": {
        "extends": "@yutengjing/eslint-config-typescript",
        "ignorePatterns": [
            "test-workspace"
        ]
    },
    "prettier": "@yutengjing/prettier-config",
    "lint-staged": {
        "*.{ts,json,md}": [
            "eslint --fix",
            "prettier --write"
        ]
    },
    "simple-git-hooks": {
        "pre-commit": "npx lint-staged"
    },
    "scripts": {
        "vscode:prepublish": "pnpm esbuild:base --minify",
        "preinstall": "npx only-allow pnpm",
        "postinstall": "stale-dep -u",
        "prepare": "simple-git-hooks",
        "clean": "npx rimraf -rf ./out",
        "esbuild:base": "stale-dep && tsx scripts/esbuild.ts",
        "esbuild:watch": "pnpm esbuild:base --sourcemap --watch",
        "esbuild:analyze": "pnpm esbuild:base --minify --metafile --analyze && esbuild-visualizer --metadata ./meta.json --open",
        "compile:test": "pnpm clean && tsc -b ./test/tsconfig.json",
        "lint": "eslint src --ext ts",
        "test": "stale-dep && pnpm compile:test && node ./out/test/runTests.js",
        "package": "vsce package --no-dependencies",
        "release": "npx @yutengjing/release",
        "publish:vs-marketplace": "vsce publish --no-dependencies",
        "publish:open-vsx": "ovsx publish --no-dependencies"
    },
    "devDependencies": {
        "@types/glob": "^8.1.0",
        "@types/mocha": "^10.0.6",
        "@types/node": "^20.11.20",
        "@types/vscode": "^1.86.0",
        "@vscode/test-electron": "^2.3.9",
        "@vscode/vsce": "^2.24.0",
        "@yutengjing/eslint-config-typescript": "^0.5.2",
        "@yutengjing/prettier-config": "^1.1.2",
        "@yutengjing/release": "^0.2.0",
        "@yutengjing/tsconfig-node": "^0.0.5",
        "esbuild": "^0.20.1",
        "esbuild-visualizer": "^0.6.0",
        "eslint": "^8.57.0",
        "glob": "^10.3.10",
        "lint-staged": "^15.2.2",
        "mocha": "^10.3.0",
        "ovsx": "^0.8.3",
        "prettier": "^3.2.5",
        "rimraf": "^5.0.5",
        "simple-git-hooks": "^2.9.0",
        "stale-dep": "^0.7.0",
        "tsx": "^4.7.1",
        "typescript": "^5.3.3"
    }
}
